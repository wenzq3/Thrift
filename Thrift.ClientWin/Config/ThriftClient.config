<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="thriftClient" type="Thrift.Client.Config.ThriftConfigSection,Thrift.Client"/>
  </configSections>

  <!--thrift client config-->
  <thriftClient>
    <services>
      <service name="ThriftTestThrift"
               spaceName="Thrift.Test.Thrift"
                className="ThriftTestThrift"
               minConnectionsNum="2"
               maxConnectionsNum="5000"
               incrementalConnections="1"
               maxConnectionsIdle="50"
               timeout="10000"
               host="127.0.0.1:9021"
               poolTimeout="5000"
               >
        <ZookeeperConfig   connectInterval="1000"   host="192.168.1.181:2182,192.168.1.182:2182,192.168.1.183:2182"   sessionTimeout="5000"    nodeParent="/ThriftServer/ThriftTestThrift" />
        <!--<ZookeeperConfig        host="127.0.0.1:2181"  sessionTimeout="5000"     nodeParent="/ThriftServer/ThriftTestThrift" />-->
      </service>

    </services>
  </thriftClient>
  <!--thrift client config end-->
</configuration>