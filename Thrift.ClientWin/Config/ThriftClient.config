<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="thriftClient" type="Thrift.Client.Config.ThriftConfigSection,Thrift.Client"/>
  </configSections>

  <!--thrift client config-->
  <thriftClient>
    <services>
      <service name="GameThriftService"
               typeName="ThriftTest.GameThriftService+Client,GameThriftService"
               minConnectionsNum="2"
               maxConnectionsNum="5"
               incrementalConnections="1"
               maxConnectionsIdle="5"
               timeout="10000"
               host="127.0.0.1:9021"
               poolTimeout="5000"
               >
        <ZookeeperConfig      host="192.168.1.181:2182,192.168.1.182:2182,192.168.1.183:2182"   sessionTimeout="5000"    nodeParent="/ThriftServer/GameService" />
      </service>
    </services>
  </thriftClient>
  <!--thrift client config end-->
</configuration>